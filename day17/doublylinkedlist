//		{
//			System.out.print(temp.val);
//			
//			if(temp.prev!=null) {
//			System.out.print("->");
//			}
//			temp=temp.prev;
//		}
//	}
	
	public void display()
	{
		Node temp=root;
		while(temp!=null)
		{
			System.out.print(temp.val);
			
			if(temp.next!=null) {
			System.out.print("->");
			}
			temp=temp.next;
		}
	}
//	public void addFront(int val)
//	{
//		Node n=new Node(val);
//		Node temp=null;
//		temp=this.root;
//		root=n;
//		root.next=temp;
//		temp.prev=root;
//		
//		
//	}
//	
	
	public static void main(String[] args)
	{
		
		
		DoublyLinkeList dll=new DoublyLinkeList();
	    dll.addNewNode(10);
	    dll.addNewNode(20);
	    dll.addNewNode(30);
//	    System.out.println("before adding");
	    dll.display();
//	    System.out.println();
//	    
//	    System.out.println("After adding");
//	    
//	    dll.addFront(50);
//	    
//	    
//	    dll.display();
	}
	
	

}
