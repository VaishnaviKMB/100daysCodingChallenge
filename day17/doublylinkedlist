package com.day17;


class Node{
    int val;
    Node prev;
	Node next;
	
	public Node(int val)
	{
		this.val=val;
		this.prev=null;
		this.next=null;
	}
}

public class DoublyLinkeList {
	
	private Node root;
	//private Node tail;
	
	public DoublyLinkeList()
	{
		this.root=null;
		//this.tail=null;
	}
	
	public void addNewNode(int val)
	{
		Node n=new Node(val);
		if(root==null)
		{
			this.root=n;
			//this.tail=n;
			System.out.println("Head node is added to the list");
			return;
		}
		Node temp=root;
		while(temp.next!=null)
		{
			temp=temp.next;
		}
		temp.next=n;
		n.prev=temp;
//		tail.next=n;
//		n.prev=tail;
//		tail=n;
		System.out.println("New node is appended");
	}
	
//	public void displayReverse()
//	{
